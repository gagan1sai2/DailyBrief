<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCECFD"
    android:padding="20dp"
    android:gravity="center">

    <!-- Weather Card -->
    <LinearLayout
        android:id="@+id/weatherCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp"
        android:background="@drawable/weather_gradient"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:clipToOutline="true">

        <!-- City Name -->
        <TextView
            android:id="@+id/detailCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vellore, IN"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginBottom="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Temperature -->
        <TextView
            android:id="@+id/detailTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28Â°C"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="42sp"
            android:layout_marginBottom="6dp" />

        <!-- Weather Condition -->
        <TextView
            android:id="@+id/detailCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Sky"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="80dp"
            android:layout_height="1.5dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/detailHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§ Humidity: 60%"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/detailWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¨ Wind: 3.5 m/s"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/detailPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Pressure: 1012 hPa"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/detailCloudiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜ï¸ Cloudiness: 20%"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
